<!DOCTYPE html>
<html>
  <head>
    <title>Mychat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-faded">
      <a class="navbar-brand" href="<%= root_path %>">MyChatApp</a>
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li class="nav-item <%= 'active' if current_page?(logout_path) %>">
            <%= link_to "Log Out #{current_user.email}", logout_path, method: 'delete',  class: 'nav-link' %>
          </li>
        <% else %> 
          <li class="nav-item <%= 'active' if current_page?(new_user_path) %>">
            <%= link_to 'Create An Account', new_user_path, class: 'nav-link' %>
          </li>
          <li class="nav-item  <%= 'active' if current_page?(new_session_path) %>">
            <%= link_to 'Log In', new_session_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    
    </nav>
    <% unless flash.empty? %>
      <% flash.each do |key, value| %>
        <div class="alert alert-warning">
          <%= value %>
        </div>
      <% end %>
    <% end %>
  	<div class="container">
  		<%= yield %>
  	</div>
  </body>
</html>
